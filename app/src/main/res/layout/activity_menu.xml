<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".activities.Menu"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/Scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_40sdp">

                    <TextView
                        android:id="@+id/nombreUsuario"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text=""
                        android:textColor="@color/naranja"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnNotif"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/transparente"
                        app:srcCompat="@drawable/icono_notif"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/Pfp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/icono_perfil"
                        android:layout_marginLeft="@dimen/_10sdp"
                        />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/SaludoMenu"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="¡Es bueno tenerte aquí!"
                    android:textColor="@color/naranja"
                    android:textSize="7mm"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/EscalaAnimo"
                        android:layout_width="320dp"
                        android:layout_height="159dp"
                        android:layout_gravity="center"
                        android:background="@drawable/cuadroverde"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="38dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/TituloEscala"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="¿Cómo te encuentras hoy?"
                                android:textColor="@color/naranja"
                                android:textSize="4mm"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="38dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="332dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Responde tu encuesta diaria"
                                android:textColor="@color/verde_oscuro"
                                android:textStyle="bold"
                                android:textSize="2.5mm" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/EscalaEmocion"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/btnPesimo"
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:background="@drawable/boton_animo"
                                android:src="@drawable/btnpesimo"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:padding="8dp"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/btnMal"
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:background="@drawable/boton_animo"
                                android:src="@drawable/btnmal"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:padding="8dp"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/btnRegular"
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:background="@drawable/boton_animo"
                                android:src="@drawable/btnregular"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:padding="8dp"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/btnBien"
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:background="@drawable/boton_animo"
                                android:src="@drawable/btnbien"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:padding="8dp"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/btnMuyBien"
                                android:layout_width="40dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:background="@drawable/boton_animo"
                                android:src="@drawable/btnsuper"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:padding="8dp"/>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="28dp" />

                <LinearLayout
                    android:id="@+id/PacientesEsp"
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cuadroverdeazul"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="8dp"
                            android:layout_height="35dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="Pacientes"
                            android:textColor="@color/verde_oscuro"
                            android:textSize="4mm"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <Button
                        android:id="@+id/btnPaEsp"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_blanco"
                        android:text="Ver mis pacientes"
                        android:textColor="@color/azul_claro" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <Button
                        android:id="@+id/btnNuevoPE"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/boton_blanco"
                        android:text="Buscar nuevos pacientes"
                        android:textColor="@color/azul_claro" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="28dp" />

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/Chat"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cuadroverdeazul"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="11dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="40dp"
                                android:layout_height="44dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/imgChat"
                                android:layout_width="51dp"
                                android:layout_height="46dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/icono_menu"
                                android:padding="5dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/chaticon" />

                            <Space
                                android:layout_width="115dp"
                                android:layout_height="46dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="11dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/labelChat"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:text="¡Veamos quién te ha hablado!"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="11dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/TituloChat"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:text="Chat"
                                android:textColor="@color/verde_oscuro"
                                android:textSize="4mm"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="19dp" />

                        <Button
                            android:id="@+id/btnChat"
                            android:layout_width="118dp"
                            android:layout_height="37dp"
                            android:layout_gravity="center"
                            android:background="@drawable/boton_blanco"
                            android:text="Ver"
                            android:textColor="@color/azul_claro" />

                    </LinearLayout>

                    <Space
                        android:layout_width="29dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/Foro"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cuadroverdeazul"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="11dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="38dp"
                                android:layout_height="44dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/imgForo"
                                android:layout_width="51dp"
                                android:layout_height="46dp"
                                android:background="@drawable/icono_menu"
                                android:padding="5dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/foroicon"/>

                            <Space
                                android:layout_width="115dp"
                                android:layout_height="46dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/labelForo"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:text="Entra a la comunidad"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="17dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="19dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/TituloForo"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:text="Foro"
                                android:textColor="@color/verde_oscuro"
                                android:textSize="4mm"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="19dp" />

                        <Button
                            android:id="@+id/btnForo"
                            android:layout_width="118dp"
                            android:layout_height="37dp"
                            android:layout_gravity="center"
                            android:background="@drawable/boton_blanco"
                            android:text="Ver"
                            android:textColor="@color/azul_claro" />

                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="29dp" />

                <LinearLayout
                    android:id="@+id/ExcPaciente"
                    android:layout_width="320dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cuadroverdeazul"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="11dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="37dp"
                                android:layout_height="44dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/imgEsPer"
                                android:layout_width="51dp"
                                android:layout_height="46dp"
                                android:background="@drawable/icono_menu"
                                android:padding="5dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/espicono"/>

                            <Space
                                android:layout_width="115dp"
                                android:layout_height="46dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="11dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/labelEspPer"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:text="Abre tu corazón aquí"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="11dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/TituloEspPer"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:text="Espacio personal"
                                android:textColor="@color/verde_oscuro"
                                android:textSize="4mm"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="34dp" />

                        <Button
                            android:id="@+id/btnPersonal"
                            android:layout_width="118dp"
                            android:layout_height="37dp"
                            android:layout_gravity="center"
                            android:background="@drawable/boton_blanco"
                            android:text="Ver"
                            android:textColor="@color/azul_claro" />

                    </LinearLayout>

                    <Space
                        android:layout_width="29dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cuadroverdeazul"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="11dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="40dp"
                                android:layout_height="44dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/imgRecordatorio"
                                android:layout_width="51dp"
                                android:layout_height="46dp"
                                android:background="@drawable/icono_menu"
                                android:padding="5dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/recicono"
                                />

                            <Space
                                android:layout_width="115dp"
                                android:layout_height="46dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="11dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Importante no olvidar"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="11dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="21dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:text="Recordatorios"
                                android:textColor="@color/verde_oscuro"
                                android:textSize="3.2mm"
                                android:textStyle="bold" />

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="35dp" />

                        <Button
                            android:id="@+id/btnRecordatorios"
                            android:layout_width="118dp"
                            android:layout_height="37dp"
                            android:layout_gravity="center"
                            android:background="@drawable/boton_blanco"
                            android:text="Ver"
                            android:textColor="@color/azul_claro" />

                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>